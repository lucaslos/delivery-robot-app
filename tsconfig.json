{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "keyofStringsOnly": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}
